<!-- figures/new -->

<h2>New NYC Historic Figures></h2>

<form action="/figures" method="POST">
  <label for="figure_name">Name: </label></br>
  <input type="text" name="figure[name]" id="figure_name"/></br>

  <p>Titles</p>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %></input>
  <% end %>

  <p>And/or Create New Title</p>
  <input type="text" name="title[name]" id="new_title"></input>

  <p>Landmarks</p>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %>
    </input>
  <% end %>

  <p>And/or Create New Landmark:</p>
  <label for="new_landmark">Name:</label></br>
  <input type="text" name="landmark[name]" id="new_landmark"></input> Year Completed: <input type="text" name="landmark[year_completed]" id="new_landmark_year"></input></br>

  <br></br>

  <input type="submit" id="create" value="Create New Figure">

</form>

<br></br>

<form action="/figures" method="GET">
  <input type="submit" value="Go Back to Figures Index">
</form>

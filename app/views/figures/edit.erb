<!-- figures/edit -->

<h2>Edit NYC Historical Figures: <%= @figure.name %></h2>

<form action="/figures/<%= @figure.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <h3>Name: <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"></h3>

  <h2>Titles</h2>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="<%= title.name %>" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></input>
  <% end %>

  <h2>And/or Create New Title</h2>
  <input type="text" name="title[name]" id="new_title"></input>

  <h2>Landmarks</h2>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.name %>" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %>
    </input>
  <% end %>

  <h2>And/or Create New Landmark:</h2>
  <p>Name: <input type="text" name="landmark[name]" id="new_landmark"></input> Year Completed: <input type="text" name="landmark[year_completed]" id="new_landmark_year"></input></p>

  <br></br>

  <input type="submit" id="save" value="Edit Figure">
</form>

<br></br>

<!-- Return to Index -->
<form action="/figures" method="GET">
  <input type="submit" value="Go Back to Figures Index">
</form>
